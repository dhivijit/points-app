<!DOCTYPE html>
<html>

<head>
    <title>Leaderboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</head>

<body class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Leaderboard</h1>
        <div>
            <% if (authenticated) { %>
                <a href="/assign" class="btn btn-secondary">Assign Points</a>
                <form method="post" action="/logout" style="display:inline-block">
                    <button class="btn btn-danger">Logout</button>
                </form>
            <% } else { %>
                <a href="/" class="btn btn-primary">Login</a>
            <% } %>
        </div>
    </div>

    <form method="get" action="/leaderboard" class="mb-3">
        <select name="round" class="form-select w-25 d-inline">
            <option value="">Total Points</option>
            <option value="1" <%=round==="1" ? "selected" : "" %>>Round 1</option>
            <option value="2" <%=round==="2" ? "selected" : "" %>>Round 2</option>
            <option value="3" <%=round==="3" ? "selected" : "" %>>Round 3</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Total Points</th>
                <th>Round 1</th>
                <th>Round 2</th>
                <th>Round 3</th>
            </tr>
        </thead>
        <tbody>
            <% members.forEach((m, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= m.name %>
                    </td>
                    <td>
                        <%= m.total %>
                    </td>
                    <td>
                        <%= m.round1 %>
                    </td>
                    <td>
                        <%= m.round2 %>
                    </td>
                    <td>
                        <%= m.round3 %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>